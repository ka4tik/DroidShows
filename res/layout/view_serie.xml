<ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout android:id="@+id/TableLayout01" android:layout_height="wrap_content" android:layout_width="wrap_content">
		<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:textStyle="bold" android:textSize="16sp" android:singleLine="false" android:id="@+id/seriename" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:singleLine="false" android:id="@+id/serieoverview" android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/status" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/firstaired" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow05" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/airday" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow06" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/airtime" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow07" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/runtime" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow08" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:id="@+id/network" android:padding="6dip" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow09" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:id="@+id/genre" android:padding="6dip" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow10" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/rating" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:id="@+id/TableRow11" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/serieactors" android:layout_width="wrap_content"/>
		</TableRow>
	</TableLayout>
</ScrollView>