<ScrollView android:id="@+id/viewSerie" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:textStyle="bold" android:textSize="16sp" android:singleLine="false" android:id="@+id/seriename" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:singleLine="false" android:id="@+id/serieoverview" android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/status" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/firstaired" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/airday" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/airtime" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/runtime" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:id="@+id/network" android:padding="6dip" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:id="@+id/genre" android:padding="6dip" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/rating" android:layout_width="fill_parent"/>
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:padding="6dip" android:id="@+id/serieactors" android:layout_width="wrap_content"/>
		</TableRow>
	</TableLayout>
</ScrollView>